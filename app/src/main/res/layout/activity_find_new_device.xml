<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindNewDevice">

    <EditText
        android:id="@+id/add_device_shown_name"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_device_lable_shown_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_device_real_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_device_label_real_name"
        app:layout_constraintTop_toBottomOf="@+id/add_device_shown_name" />

    <TextView
        android:id="@+id/add_device_lable_shown_name"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="@string/device_shown_name"
        app:layout_constraintBottom_toBottomOf="@+id/add_device_shown_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_device_shown_name" />

    <TextView
        android:id="@+id/add_device_label_real_name"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="@string/device_real_name"
        app:layout_constraintBottom_toBottomOf="@+id/add_device_real_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_device_real_name" />
</android.support.constraint.ConstraintLayout>