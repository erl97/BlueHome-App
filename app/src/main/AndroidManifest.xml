<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.th_nuernberg.bluehome">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImportData" />
        <activity android:name=".DirectInterface" />
        <activity
            android:name=".WizardChoseRulesetActorAction"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WizardChoseRulesetInitiatorAction"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WizardChoseRulesetInitiatorActor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WizardChoseRulesetSource"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WizardCreateNewRuleSet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WizardChoseRuleSetName"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SAMs.ChoseRulesetName"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SAMs.ChoseSourceDevice"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateRuleset"
            android:screenOrientation="portrait" />

        <service
            android:name=".BLEManagement.BLEService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ManAddDev"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditDevice"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AppSettings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExportData"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FindNewDevice"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RulesetList"
            android:screenOrientation="portrait" />
    </application>

</manifest>